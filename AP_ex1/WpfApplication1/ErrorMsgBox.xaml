<Window x:Class="WpfApplication1.ErrorMsgBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="ErrorMsgBox" Height="300" Width="300">

    <StackPanel>
        <Viewbox>
            <TextBlock x:Name="textBlock" TextWrapping="Wrap" Text="Please fill all textBoxes" HorizontalAlignment="Center" Margin="10 20 10 20" Padding="10 10 10 10" />
        </Viewbox>
        <Button x:Name="button" Content="Got It" HorizontalAlignment="Center" Margin="83,10,82,10" Padding="10 10 10 10" Height="92" Width="127"/>
    </StackPanel>
</Window>
