<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">

    <Grid>
        <Grid HorizontalAlignment="Left" Height="200" Margin="80,190,0,0" VerticalAlignment="Top" Width="160">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Button x:Name="button" Grid.Row ="0" Content="Single player" Margin="0 0 0 5" Click="Sp_Click"/>
            <Button x:Name="MultiBtn" Grid.Row ="1" Content="Multi player" Margin="0 5 0 5" Click="MultiBtn_Click"/>
            <Button x:Name="button2" Grid.Row ="2" Content="Settings" Margin="0 5 0 0" Click="Settings_Click"/>
        </Grid>
        <Image x:Name="logo" HorizontalAlignment="Left" Height="100" Margin="552,250,0,0" VerticalAlignment="Top" Width="200"/>

    </Grid>
</Window>
